#!/bin/Groovy
pipeline {
    agent any
    stages {
        stage('What is your name') {
           
            steps {
                echo 'My name is Abiodun '
                
            }
        }
        stage('Check date') {
           
            steps {
                sh 'date'
               
            }
        }
        stage('Check calendar') {
           
            steps {
                sh 'touch bios.sh'
               
            }
        }
         stage('Class') {
           
            steps {
                echo 'i love linux pa >> niko.txt'
               
            }
        }
         stage('situation') {
           
            steps {
                echo 'cheche is a good teacher'
               
            }
        }
         stage('honourable cheche') {
           
            steps {
                sh 'touch apc.sh'
               
            }
        }    
         stage('we shall win') {
           
             steps {
                sh 'touch apc.sh'
               
            }
        }
         stage('nigeria will be great') {
           
             steps {
                sh 'touch naija.sh'
               
            }
        }
    }
}
